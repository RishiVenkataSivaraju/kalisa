            document.querySelector(".toggle-details").addEventListener("click", function () {
                const details = document.querySelector(".details");
                details.classList.toggle("open");

                // Change text to indicate open/close state
                this.textContent = details.classList.contains("open")
                    ? "Hide Room Details ▲"
                    : "See Room Details ▼";
            });

        document.addEventListener("DOMContentLoaded", function () {
            let today = new Date().toISOString().split("T")[0];

            let fromDate = document.getElementById("fromDate");
            let toDate = document.getElementById("toDate");

            // Set the default min value for "From Date"
            fromDate.min = today;
            fromDate.value = today;

            // Set the initial min value for "To Date" (Next day)
            let tomorrow = new Date();
            tomorrow.setDate(tomorrow.getDate() + 1);
            let tomorrowStr = tomorrow.toISOString().split("T")[0];

            toDate.min = tomorrowStr;
            toDate.value = tomorrowStr;

            // Update "To Date" when "From Date" changes
            fromDate.addEventListener('change', function () {
                let fromDateValue = new Date(this.value);
                if (!isNaN(fromDateValue.getTime())) {
                    let nextDay = new Date(fromDateValue);
                    nextDay.setDate(fromDateValue.getDate() + 1);

                    let nextDayStr = nextDay.toISOString().split('T')[0];
                    toDate.min = nextDayStr;

                    if (toDate.value && toDate.value < nextDayStr) {
                        toDate.value = nextDayStr;
                    }
                }
            });
        });
    </script>
